include ../../title/title
include ../../content/content
include ../../partners/partners
include ../../mobile-photo/mobile-photo
include ../../line/line
include ../../footer/footer

mixin screen-team(data)
    +b.SECTION.screen-team()&attributes(attributes)

        +line(line.team1).screen-team__line_1
        +line(line.team2).screen-team__line_2
        +line(line.team3).screen-team__line_3

        +mobile-photo({
            src: '%=static=%img/assets/screens/screen-team/team-photo.jpg'
            }).screen-team__mobile-photo

        +e.photo-wrapper
            +e.IMG.photo(
                src='%=static=%img/assets/screens/screen-team/team-photo.jpg'
                alt='')

        +e.main

            +title.screen-team__title
                | Команда

            +e.content-wrapper
                +e.content-shadow.js-tween
                +content.screen-team__content.js-tween
                    p
                        | С Лорус Эс Си Эм вы получаете помощь профессиональной команды
                        | с многолетним опытом работы в логистике. В компании работают
                        | иностранные специалисты, тесно знакомые с мировой практикой
                        | организации поставок и таможенного оформления. Нас связывает
                        | стремление к постоянному совершенствованию, растущая экспертиза
                        | и неизменное стремление к лидерству и инновациям.

            +partners(partners.default).screen-team__partners

        +footer({})
