include ../../../title/title
include ../../../list/list
include ../../../slider/slider
include ../../../share/share

mixin block-4(data)
    +b.block-4.inner-page__block

        +title({'tag': 'h3'})._inner.block-4__title
            | Хорошо подготовленная команда — залог успеха!

        +slider(slider.academyTeam).block-4__team
            -var i = 1;
            while i <= 4
                +e.item.block-4__photo-wrapper
                    img.block-4__photo(src=`%=static=%img/assets/inner-page/academy-page/team-${i}.jpg` alt='')
                -i++

        +share().inner-page__share
