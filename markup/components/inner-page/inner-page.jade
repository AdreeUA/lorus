include ../logo/logo

mixin inner-page(data)
    -data = data || {}

    +b.SECTION.inner-page()&attributes(attributes)
        +e.HEADER.header
            +logo(logo.mainGray).inner-page__logo

        block

        if (!data.noForm)
            +b.FORM.form.inner-page__form
                +e.fields_left
                    +e.row_col.__row_2
                        +e.col
                            +input({'label': 'Как к вам обращаться?'})

                        +e.col
                            +input({'label': 'Телефон для связи'})

                    +e.row
                        +input({'label': 'Комментарий', 'type': 'textarea'})

                +e.submit_left
                    +btn-inner({'text': 'Отправить', 'type': 'submit'})
